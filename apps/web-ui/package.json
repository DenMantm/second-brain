{
  "name": "second-brain-web-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Voice-enabled AI assistant web interface",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --all --parallel",
    "dev:client": "nx run client:dev",
    "dev:server": "nx run server:dev",
    "build": "nx run-many --target=build --all",
    "build:client": "nx run client:build",
    "build:server": "nx run server:build",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all",
    "test:server": "nx run server:test",
    "test:e2e": "nx run client:test:e2e",
    "test:integration": "cd tests && vitest run",
    "test:all": "npm run test:server && npm run test:e2e && npm run test:integration",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "nx reset && rm -rf node_modules packages/*/node_modules packages/*/dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "nx": "^17.2.8",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
