{
  "name": "@second-brain/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/main.ts",
    "build": "esbuild src/main.ts --bundle --platform=node --format=esm --outfile=dist/main.js --minify --packages=external",
    "build:check": "npm run typecheck && npm run build",
    "build:fast": "esbuild src/main.ts --bundle --platform=node --format=esm --outfile=dist/main.js --packages=external",
    "build:tsc": "tsc",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "cross-env RUN_INTEGRATION_TESTS=true vitest run youtube-integration"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/multipart": "^8.3.1",
    "@fastify/websocket": "^9.0.0",
    "@langchain/community": "^1.1.12",
    "@langchain/core": "^1.1.19",
    "@langchain/openai": "^1.2.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "langchain": "^1.2.18",
    "socket.io": "^4.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "cross-env": "^10.1.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
