# Service
TTS_HOST=0.0.0.0
TTS_PORT=8083
LOG_LEVEL=info
ENVIRONMENT=development

# Engine selection: piper, kokoro, pocket, qwen3
MODEL_TYPE=pocket

# Piper
PIPER_MODEL_PATH=/models/piper/en_US-lessac-medium.onnx
PIPER_VOICE_CONFIG_PATH=/models/piper/en_US-lessac-medium.onnx.json

# Kokoro (example placeholders)
KOKORO_MODEL_PATH=/models/kokoro

# Pocket TTS (lightweight CPU TTS - recommended for best performance)
POCKET_DEFAULT_VOICE=alba
# Available voices: alba, marius, javert, jean, fantine, cosette, eponine, azelma
# Or use a custom wav file path for voice cloning

# Qwen3 (example placeholders)
QWEN3_MODEL_NAME=Qwen/Qwen3-TTS-12Hz-0.6B-CustomVoice
QWEN3_MODEL_PATH=/models/qwen3
QWEN3_LANGUAGE=Auto
QWEN3_INSTRUCT=
QWEN3_INIT_TIMEOUT_S=120
QWEN3_SYNTHESIZE_TIMEOUT_S=60
QWEN3_USE_QUANTIZATION=false
QWEN3_USE_COMPILE=false

# Quality
TTS_SAMPLE_RATE=22050
TTS_NOISE_SCALE=0.6
TTS_LENGTH_SCALE=1.0
ENABLE_AUDIO_ENHANCEMENT=false

# CUDA
CUDA_VISIBLE_DEVICES=0
